@model Category

    <div class="row">
        <div class="col-12">
            <h1>@Model.Name</h1>
            <div>
                @Html.Raw(Model.Description)
            </div>
            <div>
                <p class="textdanger">
                    Are you sure?
                </p>
            </div>
            <div>
                <a asp-action="Index" class="my-3 btn btn-inverse-info">Go Back</a>
                <form method="post">
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        </div>

    </div>